{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "shell_integration": true,
  "patch_pwsh_bleed": true,
  "palette": {
    "primary": "#c70d00",
    "text": "#FFFFFF",
    "git": "#b57df5",
    "dirty": "#F09C00",
    "ahead": "#4FE300",
    "spotify": "#1BD760"
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "p:primary",
          "foreground": "p:text",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "properties": {
            "home_icon": "~",
            "max_depth": 3,
            "folder_separator_icon": "\\",
            "style": "agnoster_full"
          },
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "p:text",
          "background": "p:git",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:dirty{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }p:git{{ end }}",
            "{{ if gt .Ahead 0 }}p:ahead{{ end }}",
            "{{ if gt .Behind 0 }}p:primary{{ end }}"
          ],
          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} üöß {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} ÔÅÜ {{ .Staging.String }}{{ end }}",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "branch_identical_icon": "‚â°",
            "branch_behind_icon": "üõë",
            "branch_gone_icon": "‚ùìüåø"
          }
        },
        {
          "type": "spotify",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "p:text",
          "background": "p:spotify",
          "properties": {
            "playing_icon": "ÓòÇ ",
            "paused_icon": "Ô££ ",
            "stopped_icon": "ÔÅç "
          },
          "template": "\udb81\udcc7 {{ if ne .Status \"stopped\" }}{{ .Track }}{{ end }}"
        },
        {
          "background": "p:primary",
          "foreground": "p:text",
          "powerline_symbol": "\ue0b0",
          "style": "powerline",
          "template": " \udb81\udee6 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}v{{ .Major }} ",
          "type": "node"
        },
        {
          "type": "rust",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "p:text",
          "background": "p:primary",
          "template": " Óû® {{ .Full }} "
        },
        {
          "type": "lua",
          "style": "powerline",
          "powerline_symbol": "ÓÇ∞",
          "foreground": "p:text",
          "background": "p:primary",
          "template": "Óò† {{ .Full }} "
        },
        {
          "type": "upgrade",
          "style": "plain",
          "foreground": "#111111",
          "background": "#FFD664"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
